# ───────────────────────────────────────────────────────────────
# ⚠️ Note: This file controls how editors/IDEs save files.
# For line ending enforcement in Git history, see .gitattributes.
# Keep these two files in sync for consistency across contributors.
# ───────────────────────────────────────────────────────────────
# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default indentation
indent_style = space
indent_size = 4

# YAML, JSON, Markdown, etc. usually prefer 2 spaces
[*.{yml,yaml,json,md,mdx}]
indent_size = 2

# Makefile uses tabs
[Makefile]
indent_style = tab

# Windows batch files use CRLF line endings
[*.{bat,cmd}]
end_of_line = crlf
